doctype html
html( lang='en' )
	head
		meta( charset='UTF-8' )
		meta( name='viewport', content='width=device-width, height=device-height, initial-scale=1.0' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		title Parallax

		link( rel='icon', href='favicon.ico' )
		link( rel='stylesheet', href='parallax.css' )
		link( rel='stylesheet', href='style.css' )
		script( src='parallax.js' )
		script( src='script.js' )

	body
		.page
			section.section
				.parallax
					.parallax-layer( data-parallax-layer!= { coeff: .2 }, style='background-image: url( sample.png )' )

			section.section
				.parallax
					.parallax-layer( data-parallax-layer!= { coeff: 0 }, style='background-image: url( sample.png )' )
					.parallax-layer.transparent( data-parallax-layer!= { coeff: 0.1 }, style='background-image: url( sample.png )' )
					.parallax-layer.transparent( data-parallax-layer!= { coeff: 0.5 }, style='background-image: url( sample.png )' )
					.parallax-layer.transparent( data-parallax-layer!= { coeff: 1 }, style='background-image: url( sample.png )' )
					.parallax-layer.transparent( data-parallax-layer!= { coeff: 1.5 }, style='background-image: url( sample.png )' )

			section.section
				.parallax
					.parallax-layer( data-parallax-layer!= { coeff: 0 }, style='background-image: url( sample.png )' )
					.parallax-layer.transparent( data-parallax-layer!= { coeff: -0.5 }, style='background-image: url( sample.png )' )
					.parallax-layer.transparent( data-parallax-layer!= { coeff: -1 }, style='background-image: url( sample.png )' )
					.parallax-layer.transparent( data-parallax-layer!= { coeff: -1.5 }, style='background-image: url( sample.png )' )

			section.section
				.parallax
					.parallax-layer-fixed( style='background-image: url( sample.png )' )
